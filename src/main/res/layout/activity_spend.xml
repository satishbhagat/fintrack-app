<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spend_background"
                tools:context=".activities.SpendActivity">

    <!-- Main Content Area -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation">

        <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="Manage Spending"
                    app:titleTextColor="@android:color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <!-- Salary Card -->
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#B3FFFFFF">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Primary Income"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:textColor="?attr/colorOnSurface" />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Update your main monthly salary."
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:layout_marginTop="4dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:hint="Monthly Salary Amount">
                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editTextSalary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Fixed Expenses Card -->
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#B3FFFFFF">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Recurring Bills &amp; EMIs"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textColor="?attr/colorOnSurface" />
                            <Button
                                    android:id="@+id/buttonAddExpense"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+ Add New" />
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/containerFixedExpenses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Credit Cards Card -->
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#B3FFFFFF">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Credit Card Due Dates"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textColor="?attr/colorOnSurface" />
                            <Button
                                    android:id="@+id/buttonAddCard"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+ Add New" />
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/containerCreditCards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Bonus Income Card -->
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#B3FFFFFF">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Log a Bonus or One-Time Income"
                                android:textAppearance="?attr/textAppearanceHeadline6" />

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Bonus Amount"
                                android:layout_marginTop="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etBonusAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                                android:id="@+id/tvBonusDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Select Date"
                                android:padding="16dp"
                                android:background="?attr/editTextBackground"
                                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                                android:gravity="center_vertical"/>

                        <RadioGroup
                                android:id="@+id/rgBonusType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">
                            <RadioButton
                                    android:id="@+id/rbBonusRecurring"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Recurring" />
                            <RadioButton
                                    android:id="@+id/rbBonusOneTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="One-Time" />
                        </RadioGroup>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Other Income Card -->
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#B3FFFFFF">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Other Income Source"
                                android:textAppearance="?attr/textAppearanceHeadline6" />

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Income Source Name"
                                android:layout_marginTop="16dp">
                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etOtherIncomeName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Amount"
                                android:layout_marginTop="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etOtherIncomeAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RadioGroup
                                android:id="@+id/rgOtherIncomeType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">
                            <RadioButton
                                    android:id="@+id/rbRecurring"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Recurring" />
                            <RadioButton
                                    android:id="@+id/rbOneTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="One-Time" />
                        </RadioGroup>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_nav" />

</RelativeLayout>

