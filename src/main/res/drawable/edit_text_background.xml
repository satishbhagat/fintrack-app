<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

    <!-- Sets the solid background color for the shape -->
    <solid android:color="@android:color/white" />

    <!-- Defines the border (stroke) for the shape -->
    <stroke
            android:width="1dp"
            android:color="#BDBDBD" /> <!-- A subtle grey color for the border -->

    <!-- Defines the radius for the corners to make them rounded -->
    <corners android:radius="8dp" />

</shape>
